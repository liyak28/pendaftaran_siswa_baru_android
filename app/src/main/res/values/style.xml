    </style>

    /*
    EDIT TEXT
    */ --------------------------

    <style name="editTextPrimary" parent="android:Widget.EditText">
        <item name="android:height">55dp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/bg_input_primary</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cerapro_regular</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

