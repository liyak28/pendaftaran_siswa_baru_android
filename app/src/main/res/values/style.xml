    /*
    BUTTON
    */ --------------------------

    <!--  App Compact Button  -->

    <style name="btnPrimary" parent="android:Widget.Button">
        <item name="android:height">55dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/cerapro_bold</item>
    </style>

    <style name="btnOutline" parent="android:Widget.Button">
        <item name="android:height">55dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_outline</item>
