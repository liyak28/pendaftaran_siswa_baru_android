<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".ui.student.StudentCreateActivity"
    android:background="@color/white"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSubmit"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="26dp"
            android:paddingBottom="26dp"
            >

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Siswa"
                android:textColor="@color/textBlack3"
                />

            <EditText
                android:id="@+id/etName"
                style="@style/editTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nama Lengkap" />

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="NISN Siswa"
                android:textColor="@color/textBlack3" />

            <EditText
                android:id="@+id/etNisn"
                style="@style/editTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan NISN"
                android:inputType="number"
                />

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Nomor Kartu Keluarga"
                android:textColor="@color/textBlack3" />

            <EditText
                android:id="@+id/etKk"
                style="@style/editTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor Kartu Keluarga"
                android:inputType="number"
                />

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Asal Sekolah Siswa"
                android:textColor="@color/textBlack3" />

            <EditText
                android:id="@+id/etSchool"
                style="@style/editTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Asal Sekolah" />

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Akreditas Asal Sekolah"
                android:textColor="@color/textBlack3" />

            <EditText
                android:id="@+id/etAkreditasi"
                style="@style/editTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Akreditas Asal Sekolah"
                />

            <TextView
                style="@style/textBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Koordinat Lokasi Siswa"
                android:textColor="@color/textBlack3" />

            <TextView
                android:id="@+id/tvLat"
                style="@style/textBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude : "
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/tvLng"
                style="@style/textBody1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longtitude : "
                android:layout_marginTop="6dp"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Simpan" />

</RelativeLayout>